        <Label Content="Téléphone :" HorizontalAlignment="Left" Margin="61,360,0,0" VerticalAlignment="Top" FontSize="36"/>
        <Button x:Name="btnEnregistrer" Content="Enregistrer" HorizontalAlignment="Left" Margin="402,566,0,0" VerticalAlignment="Top" Width="308" Background="#FF2DA72F" Foreground="White" Click="btnEnregistrer_Click" FontSize="48"/>
        <Label Content="Liste des contacts" HorizontalAlignment="Left" Margin="402,676,0,0" VerticalAlignment="Top" Width="308" FontSize="36" FontWeight="Bold" Height="59"/>
        <TextBox x:Name="txtListeContacts" HorizontalAlignment="Left" Margin="61,768,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="1006" Height="175" IsReadOnly="True"/>
